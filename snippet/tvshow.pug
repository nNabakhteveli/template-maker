doctype html
include parts/links-in-header

link(href='https://fonts.googleapis.com/css?family=Roboto:400,700,900&display=swap' rel='stylesheet')
link(rel='stylesheet' href='../assets/post/css/bootstrap.min.css')
link(rel='stylesheet' href='../assets/post/css/style.css')
link(rel='stylesheet' href='../assets/post/css/post.css')



.nav
  a(href='/')
    button.btn.btn-info#nav-button(type='button') შაბლონისთვის


.content
  .container
    .row.align-items-stretch.justify-content-center.no-gutters
      .col-md-7
        .form.h-100.contact-wrap.p-5
          .guests 
          h3.text-center შაბლონის შექმნა გადაცემისთვის
          form#contactForm.mb-5(action='http://127.0.0.1:3000/for-TV-show/TVshow-success' enctype="multipart/form-data" method='GET' name='contactForm')
            button.guest#oneguest(for='oneuser' name='oneuser') 1 სტუმარი
            button.guest#twoguest(for='twouser' name='twouser') 2 სტუმარი
            .rows-container
              .row
                .col-md-6.form-group.mb-3
                  label.col-form-label სტუმარი
                  input#name.form-control(for='guest' type='text' name='guestName' placeholder='სტუმარის სახელი' required='true')
                  .form-group
                    label(for='exampleFormControlFile1') სურათის ატვირთვა
                    input#exampleFormControlFile1.form-control-file(for='image' name='image' type='file' required)
            .row.justify-content-center
              .col-md-5.form-group.text-center
                input.btn.btn-block.btn-primary.rounded-0.py-2.px-4(type='submit' value='შექმნა') 
                span.submitting



include parts/js_scripts
script(src='../assets/post/js/jquery-3.3.1.min.js')
